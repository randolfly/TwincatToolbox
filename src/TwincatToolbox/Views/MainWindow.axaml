<Window x:Class="TwincatToolbox.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:TwincatToolbox"
        xmlns:vm="using:TwincatToolbox.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        Width="800"
        Height="450"
        x:DataType="vm:MainWindowViewModel">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
        to set the actual DataContext for runtime, set the DataContext property in code (look at
        App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <Panel>
        <Grid ColumnDefinitions="Auto, *">
            <Border>
                <Button>Hello!</Button>
            </Border>
            <Panel Grid.Column="1">
                <ContentControl Content="{Binding Content}">
                    <ContentControl.ContentTemplate>
                        <local:ViewLocator />
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </Panel>
        </Grid>
    </Panel>
</Window>